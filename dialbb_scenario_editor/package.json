{
  "name": "dialbb-scenario-editor",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "editor": "electron .",
    "editor-en": "electron . --lang=en",
    "prebuild": "node scripts/prebuild.js",
    "postbuild": "node scripts/postbuild.js",
    "build-win": "npm run prebuild && electron-builder --win --x64 && npm run postbuild",
    "build-mac": "npm run prebuild && electron-builder --mac --x64 && npm run postbuild",
    "build-linux": "npm run prebuild && electron-builder --linux --x64 && npm run postbuild"
  },
  "keywords": [],
  "author": "Mikio Nakano",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.1.3",
    "electron-builder": "^26.0.12",
    "license-checker": "^25.0.1",
    "asar": "^3.2.0"
  },
  "dependencies": {},
  "build": {
    "appId": "com.electron.dialbb",
    "productName": "DialBB_Scenario_Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "editor_gui/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "package-lock.json",
      "LICENSE"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-installer-${version}-win.${ext}"
    },
    "mac": {
      "target": "pkg",
      "artifactName": "${productName}-installer-${version}-mac.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${productName}-installer-${version}-linux.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "license": "LICENSE"
    },
    "pkg": {
      "license": "LICENSE"
    }
  }
}
